<!--views/posts/edit.hbs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit {{post.name}}</title>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Poppins:wght@300;400&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/styles.css">

</head>

<body>
    <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="/">Sunshine Scribbles ☀️</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon" style="color:#ff4081;"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/posts">Posts</a>
                </li>
                {{#if currentUser}}
                <li class="nav-item active">
                    <a class="nav-link" href="/user/{{currentUser.username}}">My Posts</a>
                </li>
                {{/if}}
            </ul>
            <ul class="navbar-nav ml-auto">
                {{#unless currentUser}}
                <li class="nav-item">
                    <a class="nav-link" href="/login">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/register">Sign Up</a>
                </li>
                {{else}}
                <li class="nav-item">
                    <a class="nav-link" href="/user/{{currentUser.username}}">Signed In as {{currentUser.username}}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">LogOut</a>
                </li>
                {{/unless}}
            </ul>
        </div>
    </nav>
    <div class="container">
        <h1 style="text-align: center;">Edit {{post.name}}</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/posts/{{post._id}}/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="post[name]" value="{{post.name}}">
                </div>
                <div class="form-group">
                    <input class="form-control" type="url" name="post[image]" value="{{post.image}}">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="post[description]" value="{{post.description}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </div>
            </form>
            <a href="/posts">Go back</a>
        </div>
    </div>

</body>

</html>